<%- include('navbar.ejs') %>
<div class="container mt-4 mb-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div id='login-form' class='login-page'>
                <div class="form-box bg-light shadow-lg">
                    <div class='button-box'>
                        <div id='btn' class="bg-warning"></div>
                        <button type='button' onclick='login()' class='toggle-btn'>Log In</button>
                        <button type='button' onclick='register()' class='toggle-btn'>Register</button>
                    </div>
                    <form id='login' class='input-group-login' method="post" action="/do_login">
                        <input type='text' class='text-dark input-field' name='user_mobile' placeholder='Email Mobile' required>
                        <input type='password' class='text-dark input-field mt-3' name='user_password' placeholder='Enter Password' required>
                        <button class='submit-btn mt-5 bg-warning '>Log in</button>
                    </form>
                    <form id='register' class='input-group-register' method="post" action="/register">
                        <input type='text' class='text-dark input-field mt-0' name='user_name' placeholder='Enter Name' required>
                        <input type='number' class='text-dark input-field' name='user_mobile' placeholder='Enter Mobile ' required>
                        <input type='email' class='text-dark input-field' name='user_email' placeholder='Email Id' required>
                        <input type='password' class='text-dark input-field' name='user_password' placeholder='Enter Password' required>
                        <input type='password' class='text-dark input-field' placeholder='Confirm Password' required>
                        <button class='submit-btn mt-3 bg-warning'>Register</button>
                    </form>
                </div>
            </div>

            <script>
                var x = document.getElementById('login');
                var y = document.getElementById('register');
                var z = document.getElementById('btn');
                function register() {
                    x.style.left = '-400px';
                    y.style.left = '50px';
                    z.style.left = '110px';
                }
                function login() {
                    x.style.left = '50px';
                    y.style.left = '450px';
                    z.style.left = '0px';
                }
            </script>
            <script>
                var modal = document.getElementById('login-form');
                window.onclick = function (event) {
                    if (event.target == modal) {
                        modal.style.display = "none";
                    }
                }
            </script>

        </div>
    </div>
</div>

