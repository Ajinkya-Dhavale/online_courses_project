<%- include('navbar.ejs') %>
<form action="/admin/update_category" method="post">
    <div class="container">
        <div class="row">
            <h2 class="text-center mt-4 text-warning">Update Category</h2>
            <input type="hidden" name="category_id" class="form-control" value="<%= cats[0].category_id%>">
            <div class="col-md-6 mt-3">
                Enter Category Name : <input type="text" name="category_name" class="form-control" value="<%= cats[0].category_name%>">
            </div>
            <div class="col-md-6 mt-3">
                Enter Category Description : <textarea name="category_description" class="form-control"><%= cats[0].category_description%>
                </textarea>
            </div>
            <div class="col-md-12 text-center mt-5">
                <button class="btn btn-primary">Category Category</button>
            </div>
        </div>
    </div>
</form>
