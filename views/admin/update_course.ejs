<%- include('navbar.ejs') %>
<form action="/admin/update_course" enctype="multipart/form-data" method="post">
    <div class="container pb-4" style="background-color: #9A9DA0;">
        <div class="row">
            <div class="col-md-12 text-center mt-4">
                <h2 class="text-primary">Update Course</h2>
            </div>
            <div class="col-md-4 mt-3">
                <input type="hidden" name="course_id" class="form-control"  value="<%=course[0].course_id%>">
                Course Name : <input type="text" name="course_name" class="form-control"  value="<%=course[0].course_name%>">
            </div>
            <div class="col-md-4 mt-3">
                Course Category :
                <select name="course_category_id" class="form-control" >
                    <% for(var i=0;i<list.length;i++) { %>
                    <option <%= (list[i].category_name == course[0].category_name) ? 'selected' : '' %> value="<%=list[i].category_id%>"><%=list[i].category_name%></option>
                    <% } %>
                </select>
            </div>
            <div class="col-md-4 mt-3">
                Course Duration : <input type="text" name="course_duration" class="form-control" value="<%=course[0].course_duration%>">
            </div>
            <div class="col-md-4 mt-3">
                Course Price : <input type="text" name="course_price" class="form-control"  value="<%=course[0].course_price%>">
            </div>
            <div class="col-md-4 mt-3">
                Course Image : <input type="file" name="course_image" class="form-control" accept="image/*">
            </div>
            <div class="col-md-4 mt-3">
                Course Sample Video : <input type="file" name="course_sample_video" class="form-control" accept="video/*">
            </div>
            <div class="col-md-4 mt-3">
                Course Mentor : <input type="text" name="course_mentor" class="form-control"  value="<%=course[0].course_mentor%>">
            </div>
            <div class="col-md-4 mt-3">
                Course Link : <input type="text" name="course_link" class="form-control" value="<%=course[0].course_link%>">
            </div>
            <div class="col-md-4 mt-3">
                Platform
                <select name="course_platform" class="form-control" >
                    <option <%= (course[0].course_platform=='Online Live') ? 'selected' : '' %>>Online Live</option>
                    <option <%= (course[0].course_platform=='Online') ? 'selected' : '' %>>Online</option>
                    <option <%= (course[0].course_platform=='Classroom') ? 'selected' : '' %>>Classroom</option>
                </select>
            </div>
            <div class="col-md-12 mt-3">
                Course Detail : 
                <textarea class="form-control" name="course_detail"><%=course[0].course_detail%></textarea>
            </div>
            <div class="col-md-12 mt-4 mb-2 text-center">
                <button class="btn btn-primary">Update Course</button>
            </div>
        </div>
    </div>
</form>
<%- include('footer.ejs')%>