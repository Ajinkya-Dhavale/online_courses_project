<%- include('navbar.ejs') %>
<form action="/admin/save_course" enctype="multipart/form-data" method="post">
    <div class="container pb-4" style="background-color: #9A9DA0;">
        <div class="row">
            <div class="col-md-12 text-center mt-4">
                <h2 class="text-primary">Add Course</h2>
            </div>
            <div class="col-md-4 mt-3">
                Course Name* : <input type="text" name="course_name" class="form-control" required>
            </div>
            <div class="col-md-4 mt-3">
                Course Category* :
                <select name="course_category_id" class="form-control" required>
                    <option disabled selected value="">Select Category</option>
                    <% for(var i=0;i<cats.length;i++) { %>
                    <option value=<%= cats[i].category_id %>><%= cats[i].category_name%></option>
                    <% } %>
                </select>
            </div>
            <div class="col-md-4 mt-3">
                Course Duration : <input type="text" name="course_duration" class="form-control">
            </div>
            <div class="col-md-4 mt-3">
                Course Price* : <input type="text" name="course_price" class="form-control" required>
            </div>
            <div class="col-md-4 mt-3">
                Course Image* : <input type="file" name="course_image" class="form-control" accept="image/*" required>
            </div>
            <div class="col-md-4 mt-3">
                Course Sample Video : <input type="file" name="course_sample_video" class="form-control" accept="video/*">
            </div>
            <div class="col-md-4 mt-3">
                Course Mentor* : <input type="text" name="course_mentor" class="form-control" required>
            </div>
            <div class="col-md-4 mt-3">
                Course Link : <input type="text" name="course_link" class="form-control">
            </div>
            <div class="col-md-4 mt-3">
                Platform*
                <select name="course_platform" class="form-control" required>
                    <option disabled selected value="">Select Platform</option>
                    <option>Online Live</option>
                    <option>Online</option>
                    <option>Classroom</option>
                </select>
            </div>
            <div class="col-md-12 mt-3">
                Course Detail : 
                <textarea class="form-control" name="course_detail"></textarea>
            </div>
            <div class="col-md-12 mt-4 mb-2 text-center">
                <button class="btn btn-primary">Add Course</button>
            </div>
        </div>
    </div>
</form>
